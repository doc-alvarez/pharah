{% case section.settings.text_align %}
    {% when 'left' %}
        {% assign text_align = 'left' %}
        {% assign col_align = 'flex-start'%}
    {% when 'center' %}
        {% assign text_align = 'center' %}
        {% assign col_align = 'center'%}

    {% when 'right' %}
        {% assign text_align = 'right' %}
        {% assign col_align = 'flex-end'%}
{% endcase %}

{%- style -%}

{% if section.settings.is_theme_font_style_used == true %}
    {{section.settings.font_style | font_face}}{% endif %}


.dg-container__{{section.id}}{
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}

@media(min-width: 576px) {
    .dg-container__{{section.id}}{
        max-width: 540px;
    }
}

@media(min-width: 768px) {
    .dg-container__{{section.id}}{
        max-width: 720px;
    }
}

@media(min-width: 992px) {
    .dg-container__{{section.id}}{
        max-width: 960px;
    }
}

@media(min-width: 1200px) {
    .dg-container__{{section.id}}{
        max-width: 1140px;
    }
}

@media(min-width: 1400px) {
    .dg-container__{{section.id}}{
        max-width: 1320px;
    }
}
.dg-row__{{section.id}}{
    --bs-gutter-x: 1.5rem;
    --bs-gutter-y: 0;
    display: flex;
    flex-wrap: wrap;
    margin-top: calc(var(--bs-gutter-y) * -1);
    margin-right: calc(var(--bs-gutter-x) * -0.5);
    margin-left: calc(var(--bs-gutter-x) * -0.5);
}
.dg-row__{{section.id}}> * {
    box-sizing: border-box;
    flex-shrink: 0;
    width: 100%;
    max-width: 100%;
    padding-right: calc(var(--bs-gutter-x) * 0.5);
    padding-left: calc(var(--bs-gutter-x) * 0.5);
    margin-top: var(--bs-gutter-y);
}

.dg-justify-content__{{section.id}}{
    justify-content: center;
}

@media(min-width: 576px) {
    .dg-col-sm-5__{{section.id}}{
        flex: 0 0 auto;
        width: 41.66666667%;
    }

    .dg-col-sm-7__{{section.id}}{
        flex: 0 0 auto;
        width: 58.33333333%;
    }
}

.about-section__{{section.id}}{
    padding-top: {{section.settings.section_padding_top}}px;
    padding-bottom: {{section.settings.section_padding_bottom}}px;
    background-color: {{section.settings.section_background_color}};
    color: {{section.settings.text_color}};
    {% if section.settings.is_theme_font_style_used == true %}
        font-family: {{section.settings.font_style.family}};
    {% endif %}
}

.text-container__{{section.id}}{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{col_align}};
    padding: 40px;
    width: 100%;
    height: 100%;
}

.title__{{section.id}}{
    margin-bottom: {{section.settings.title_margin_bottom}}px;
    text-align: {{text_align}};
    font-size: {{section.settings.title_font_size}}px;
    font-weight: {{section.settings.title_font_weight}};
    font-style: {{section.settings.title_font_style}};
}

.description__{{section.id}}{
    text-align: {{text_align}};
    font-size: {{section.settings.description_font_size}}px;
}

.description__{{section.id}} > p {
    margin: 0;
    color: {{section.settings.text_color}};

}

.subtitle__{{section.id}}{
    margin-bottom: 20px;
    text-align: {{text_align}};
    font-size: {{section.settings.subtitle_font_size}}px;
}

.line__{{section.id}}{
    margin: 0 0 20px;
    width: 100px;
    border: 1px solid {{section.settings.text_color}};
}

.image__{{section.id}}{
    object-fit: cover;
}

@media(max-width: 576px) {
    .about-section__{{section.id}}{
        padding-top: {{section.settings.section_padding_top_mobile}}px;
        padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
    }

    .text-container__{{section.id}}{
        padding: 30px;
    }

    .title__{{section.id}}{
        margin-bottom: {{section.settings.title_margin_bottom_mobile}}px;
        font-size: {{section.settings.title_font_size_mobile}}px;
    }

    .description__{{section.id}}{
        font-size: {{section.settings.description_font_size_mobile}}px;
    }
}

{%- endstyle -%}

{%-style-%}

{{section.settings.custom_css}}

{%-endstyle-%}

<div class="about-section__{{section.id}}">
  <div class="dg-container__{{section.id}}">
      <div class="dg-row__{{section.id}} dg-justify-content__{{section.id}}">
        <div class="dg-col-sm-7__{{section.id}} column-1__{{section.id}}">
            <a href="{{section.settings.link_href}}">
                {% if section.settings.image == blank %}
                    <img src="https://cdn.shopify.com/s/files/1/0567/3399/1064/files/hands-on-desk-at-meeting.jpg"
                    class="image__{{section.id}}"
                    loading="lazy"
                    sizes="(min-width: 1100px) 1100px, (min-width: 750px) 750px"
                    width="100%"
                    height="100%"
                    />
                {% else %}
                    <img srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | img_url: '165x' }} 165w,{%- endif -%}
                    {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | img_url: '360x' }} 360w,{%- endif -%}
                    {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | img_url: '535x' }} 535w,{%- endif -%}
                    {%- if section.settings.image.width >= 720 -%}{{ section.settings.image | img_url: '720x' }} 720w,{%- endif -%}
                    {%- if section.settings.image.width >= 940 -%}{{ section.settings.image | img_url: '940x' }} 940w,{%- endif -%}
                    {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | img_url: '1070x' }} 1070w{%- endif -%}"
                    src="{{ section.settings.image | img_url: '525x' }}"
                    class="image__{{section.id}}"
                    sizes="(min-width: 1100px) 1100px, (min-width: 750px) 750px"
                    alt="{{ section.settings.image.alt | escape }}"
                    loading="lazy"
                    width="100%"
                    height="100%"
                    >
                {% endif %}
            </a>
        </div>
        <div class="dg-col-sm-5__{{section.id}} column-2__{{section.id}}">
            <div class="text-container__{{section.id}}">
              {%if section.settings.title_text != blank%}
                <div class="title__{{section.id}}">{{ section.settings.title_text | escape }}</div>
              {%endif%}
              {%if section.settings.subtitle_text != blank%}
                <div class="subtitle__{{section.id}}">{{ section.settings.subtitle_text | escape }}</div>
              {%endif%}
              <hr class="line__{{section.id}}" />

              {%if section.settings.description_text != blank%}
                <div class="description__{{section.id}}">{{ section.settings.description_text }}</div>
              {%endif%}
            </div>
        </div>
      </div>

  </div>
</div>

{% schema %}

{
    "name": "Dingo-About-4",
    "tag": "section",
    "class": "spaced-section spaced-section--full-width",
    "settings": [
        {
            "type": "header",
            "content": "Main settings"
        }, 
        {
            "type": "text",
            "id": "title_text",
            "default": "About our company",
            "label": "Title text"
        },
        {
            "type": "text",
            "id": "subtitle_text",
            "default": "Brief description of the companyâ€™s tasks",
            "label": "subtitle text"
        }, 
        {
            "type": "richtext",
            "id": "description_text",
            "default": "<p>Use this text to share information about your company with your customers. Describe a product, share announcements, or welcome customers to your store.</p>",
            "label": "Description text"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "url",
            "id": "link_href",
            "label": "Image link"
        }, 

        {
            "type": "header",
            "content": "Common text settings"
        }, {
            "type": "checkbox",
            "id": "is_theme_font_style_used",
            "default": false,
            "label": "Override default font"
        }, {
            "type": "font_picker",
            "id": "font_style",
            "default": "roboto_n4",
            "label": "Font style",
            "info": "CAUTION: Custom fonts might cause slower load times. If you would like to use a custom font please enable 'Override default font'"
        }, {
            "type": "color",
            "id": "text_color",
            "label": "Text color",
            "default": "#000000"
        },
        
        {
            "type": "header",
            "content": "Text settings"
        }, {
            "type": "radio",
            "id": "text_align",
            "label": "Text alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                }, {
                    "value": "center",
                    "label": "Center"
                }, {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "center"
        }, {
            "type": "range",
            "id": "title_font_size",
            "min": 30,
            "max": 90,
            "step": 1,
            "unit": "px",
            "label": "Title font size",
            "default": 42
        }, {
            "type": "range",
            "id": "title_font_size_mobile",
            "min": 30,
            "max": 90,
            "step": 1,
            "unit": "px",
            "label": "Title font size (mobile)",
            "default": 30
        }, {
            "type": "select",
            "id": "title_font_weight",
            "label": "Title font weight",
            "options": [
                {
                    "value": "normal",
                    "label": "normal"
                }, {
                    "value": "bold",
                    "label": "bold"
                }
            ],
            "default": "bold"
        }, {
            "type": "select",
            "id": "title_font_style",
            "label": "Title font style",
            "options": [
                {
                    "value": "normal",
                    "label": "normal"
                }, {
                    "value": "italic",
                    "label": "italic"
                }
            ],
            "default": "normal"
        }, {
            "type": "range",
            "id": "title_margin_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Title margin bottom",
            "default": 24
        }, {
            "type": "range",
            "id": "title_margin_bottom_mobile",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Title margin bottom (mobile)",
            "default": 0
        }, {
            "type": "range",
            "id": "subtitle_font_size",
            "min": 10,
            "max": 20,
            "step": 1,
            "unit": "px",
            "label": "Subtitle font size",
            "default": 16
        }, {
            "type": "range",
            "id": "description_font_size",
            "min": 16,
            "max": 40,
            "step": 1,
            "unit": "px",
            "label": "Description font size",
            "default": 20
        }, {
            "type": "range",
            "id": "description_font_size_mobile",
            "min": 10,
            "max": 40,
            "step": 1,
            "unit": "px",
            "label": "Description font size (mobile)",
            "default": 20
        }, {
            "type": "header",
            "content": "Layout settings"
        }, {
            "type": "color",
            "id": "section_background_color",
            "label": "Section background color",
            "default": "#ffffff"
        }, {
            "type": "range",
            "id": "section_padding_top",
            "min": 60,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "Section top padding",
            "default": 180
        }, {
            "type": "range",
            "id": "section_padding_bottom",
            "min": 60,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "Section bottom padding",
            "default": 180
        }, {
            "type": "range",
            "id": "section_padding_top_mobile",
            "min": 60,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "Section top padding (mobile)",
            "default": 120
        }, {
            "type": "range",
            "id": "section_padding_bottom_mobile",
            "min": 60,
            "max": 200,
            "step": 10,
            "unit": "px",
            "label": "Section bottom padding (mobile)",
            "default": 120
        }, {
            "type": "header",
            "content": "Custom settings"
        }, {
            "type": "textarea",
            "id": "custom_css",
            "label": "Custom CSS"
        }
    ],
    "presets": [
        {
            "name": "Dingo-About-4"
        }
    ]
}

{% endschema %}
