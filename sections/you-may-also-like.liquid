<style>
    #categories-section {
        max-width: 100vw;
        margin-top: 46px;
        margin-bottom: 28px;
        height: auto;
        display: flex;
        flex-direction: column;
        gap: 0;
    }
    .cat-cards-container {
       display: flex;
        padding: 50px 20px 25px;
        gap: 20px;
    }
    .cat-cards-container_2ndRow {
        max-width: 100%;
        padding: 25px 20px 25px;
        height: auto;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 20px;
        {% if section.settings.enable2ndRow == false %}
        display: none;
        {% else %}
        display: grid;
        {% endif %}
    }
    .card {
        flex: 0 1 100%;
        height: 400px;
        border: transparent;
        gap: 10px;
    }
    .card .img-container {
        
        overflow: hidden; 
        
    }
  

    .img-container img {
        margin: 0;
        width: 100%;
        height: auto;
        transition: all ease 500ms;
    }
    .img-container img:hover {
        transform: scale(1.2);
        cursor: pointer;
    }
    .cat-title {
        margin-top: 50px;
    }
    .cat-title h2 {
        text-align: center;
        font-size: 60px;
        font-weight: 300;
        line-height: 56px;
        color: black;
        font-family: Inconsolata;
    }
    .card-link {
        text-align: center;
        display: block;
        line-height: 1.35;
        color: black;
        flex: 1 0 20%;
    }

    .card-link a{
        position: relative;
        text-decoration: none;
        font-size: 20px;
        color: black !important;
        font-weight: 300;
        transition: none;
    }
    
    .card-link a:hover {
        font-weight: 500;
        color: #c99a5c !important;
    }
   

    .mobile {
        display: none;
    }
    @media (max-width: 767px) {
        .desktop {
            display: none;
        }
        .mobile{
            display: block;
        }
        .cat-cards-container {
          
            padding: 50px 20px 0;
        }
        .cat-cards-container_2ndRow {
            grid-template-columns: 1fr 1fr;
            gap: 0 20px;
            padding: 0 20px 0;
            {% if section.settings.enable2ndRow == false %}
                display: none;
            {% else %}
                display: grid;
            {% endif %}
        }
        
        .cat-cards-container {
          flex-direction: column;
        }
        .card-link {
            padding: 20px 0 50px;

        }
        .card .img-container {
            aspect-ratio: 1/1;
            max-width: 100%;
           
        }
        .cat-title h2 {
            font-size: 38px;
            font-weight: normal;
            line-height: 1.12;
            font-weight: 300;
        }
        .cat-title {
            margin-top: 25px;
        }
    }

</style>

